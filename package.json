{
  "name": "zenretail-web",
  "version": "1.0.0",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "update": "npm rebuild node-sass",
    "start": "ng serve --aot",
    "build": "ng build --aot --prod --deploy-url / --base-href '/'",
    "deploy": "rm -f ../ZenRetail/webroot/*.*; rm -rf ../ZenRetail/webroot/assets; mv ./dist/* ../ZenRetail/webroot/; rm -rf ./dist;",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server",
    "build:client-and-server-bundles": "ng build --prod && ng run zenretail-web:server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors"
  },
  "private": true,
  "dependencies": {
    "@agm/core": "*",
    "@angular/animations": "*",
    "@angular/cdk": "*",
    "@angular/common": "*",
    "@angular/compiler": "*",
    "@angular/core": "*",
    "@angular/forms": "*",
    "@angular/http": "*",
    "@angular/material": "*",
    "@angular/platform-browser": "*",
    "@angular/platform-browser-dynamic": "*",
    "@angular/platform-server": "*",
    "@angular/router": "*",
    "@nguniversal/express-engine": "*",
    "@nguniversal/module-map-ngfactory-loader": "*",
    "@ngx-translate/core": "*",
    "@ngx-translate/http-loader": "*",
    "angular2-useful-swiper": "*",
    "core-js": "*",
    "file-saver": "*",
    "rxjs-compat": "*",
    "swiper": "*",
    "ts-helpers": "*",
    "ts-loader": "*",
    "zone.js": "*"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "*",
    "@angular/cli": "*",
    "@angular/compiler-cli": "*",
    "@types/node": "*",
    "codelyzer": "*",
    "ts-node": "*",
    "tslint": "*",
    "typescript": "*",
    "webpack-cli": "*"
  }
}
